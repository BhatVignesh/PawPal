<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trainer_Info">

    <TextView
        android:id="@+id/Trainername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:text="@string/sophia_granger"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trainerinfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:lineSpacingExtra="8dp"
        android:text="Location: Lafayette, Indiana \n\n
Services: Dog training, pet sitting, dog walking, pet transport, medicine administration, and canine massage therapy.\n\n
Approach: Uses force-free, science-based training methods focused on positive reinforcement.\n\n
Qualifications: Certified Canine Massage Therapist (CCMT) with years of experience in dog training and animal behavior.\n\n
Contact: Pawsitive Pets, LLC, 4315 Commerce Drive, Suite 440, Box 216, Lafayette, IN 47905. Phone: (765) 325-PAWS.\n\n
Website: Pawsitive Pets, LLC​ (Pawsitive Pets LLC)​.
"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="197dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/trainerImage"
        android:layout_width="109dp"
        android:layout_height="107dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="56dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/trainer1" />
</androidx.constraintlayout.widget.ConstraintLayout>