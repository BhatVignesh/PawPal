<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_trainee_detail.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView for trainee image -->
    <ImageView
        android:id="@+id/imageTraineeDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person1" />

    <!-- Trainee name -->
    <TextView
        android:id="@+id/textTraineeNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/imageTraineeDetail"
        android:layout_margin="16dp" />

    <!-- Other details -->
    <TextView
        android:id="@+id/textTraineeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTraineeNameDetail"
        android:layout_margin="16dp" />

    <!-- Button to book appointment -->
    <Button
        android:id="@+id/buttonBookAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:layout_below="@id/textTraineeDetails"
        android:backgroundTint="#458AAC"
        android:layout_marginTop="24dp" />

</RelativeLayout>
